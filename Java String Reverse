import java.util.*;

public class Solution {

    public static void main(String[] args) {
        Scanner s = new Scanner (System.in);
        String a = s.next();
        StringBuilder sd = new StringBuilder(a);
        sd.reverse();
        String d = sd.toString();
        if(a.length() <=50){
            if(d.equals(a)){
                System.out.println("Yes");
            }
            else {
                System.out.println("No");
            }
        }
    }
}
